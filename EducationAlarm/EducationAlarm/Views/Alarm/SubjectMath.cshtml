            @Html.ValidationMessageFor(model => model.MathAnswer2, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        @{ var list3 = ViewBag.MathList3;
            <p>3)@list3[0] @list3[1] @list3[2]</p>
            for (int j = 3; j < list3.Count; j++)
            {
                <p> @list3[j] </p>
            }
        }
        <div class="col-md-5">
            @Html.EditorFor(model => model.MathAnswer3, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MathAnswer3, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @{ var list4 = ViewBag.MathList4;
