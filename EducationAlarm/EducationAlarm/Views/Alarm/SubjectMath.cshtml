        <div class="col-md-5">
            @Html.EditorFor(model => model.MathAnswer4, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MathAnswer4, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit answers" class="btn btn-default" />
            </div>
    </div>
</div>
}
