@model UserAnswers

@using EducationAlarm.ViewModels;

<h2>Subject Math</h2>

<h3>Please type or paste the correct answer in the textbox</h3>


@{

    ViewBag.Title = "KnowledgeSolve";

}
<style>
    form {
        float: left;
        width: 50%
    }

    #checkX {
        float: right;
        width: 50%
    }
</style>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryunobtrusive")

@using (Ajax.BeginForm("Subject","Alarm",new AjaxOptions { UpdateTargetId= "checkX" }))
    {

@Html.HiddenFor(x => x.AlarmId)
<div class="form-horizontal">
    <div class="form-group">
        @{var list = ViewBag.MathList1;
            //int x1 = Convert.ToInt32(list[0]);
            //int y1 = Convert.ToInt32(list[2]);

            <p>1)@list[0] @list[1] @list[2]</p>
