@model UserMathAnswers
@using EducationAlarm.ViewModels;
@using Microsoft.AspNet.Identity;

<h2>Subject Math</h2>

<h3>Please type or paste the correct answer in the textbox</h3>

@{ 
    MathProblems mp = new MathProblems();
    ViewDbLookups db = new ViewDbLookups();
    string id = User.Identity.GetUserId();
    string subject = db.FindSubject(id);
    ViewBag.Title = "KnowledgeSolve";
}

