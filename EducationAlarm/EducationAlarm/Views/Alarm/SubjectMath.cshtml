            {
                @*<p>@Html.RadioButton("Guess", list[j], mp.Guess)</p>*@
                <p> @list[j] </p>
            }
        }

        <div class="col-md-5">
            @Html.EditorFor(model => model.MathAnswer1, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MathAnswer1, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @{var list2 = ViewBag.MathList2;


            <p>2)@list2[0] @list2[1] @list2[2] </p>
