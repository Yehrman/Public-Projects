@model IEnumerable<MvcProjectDbConn.Client>

@{
    ViewBag.Title = "ViewDeletedClients";
}

<h2>ViewDeletedClients</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model=>model.ClientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientEmail)
        </th>
    
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClientName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientEmail)
        </td>
       
        <td>
            @Html.ActionLink("undo delete", "UndoDelete", new { id=item.ClientId })
