@model CompuskillsMvcProject.Models.Utility

@{
    ViewBag.Title = "Search";
}


@using (Html.BeginForm())
{
<div>
    <label> Enter (all or part of) the client name</label>
    @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(x => x.Name)
</div>
    <div>
        <label> Search client bills after this date.</label>
        @Html.EditorFor(x => x.From, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.From)
    </div>
    <div>
        <label> Search client bills before this date.</label>
        @Html.EditorFor(x => x.To, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.To)
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
}

